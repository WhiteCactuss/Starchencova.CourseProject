<Window x:Class="Wolk.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wolk"
        xmlns:vm="clr-namespace:Wolk.ViewModels"
        mc:Ignorable="d"
        Title="Window2" Height="200" Width="300">

    <Window.DataContext>
        <vm:CreateDataViewModel />
    </Window.DataContext>

    <Grid>
        <TextBlock Text="Выберите тип данных" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200"/>

        <ComboBox ItemsSource="{Binding Classes}" SelectedItem="{Binding SelectedClass, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,40,0,0" />
        <TextBox Text="{Binding NewItem, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,80,0,0"/>
        <Button Content="Добавить данные" Command="{Binding AddItemCommand}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,130,0,0"/>
    
    </Grid>
</Window>
