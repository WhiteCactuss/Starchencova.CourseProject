<Window x:Class="Wolk.Views.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wolk.Views"
        mc:Ignorable="d"
        Title="AddTeacherWindow" Height="200" Width="300">
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">

        <TextBlock Text="Название" Margin="8, 4"/>

        <TextBox Margin="8, 4" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Margin="8, 4" Content="Добавить" Command="{Binding AddTeacherCommand}"/>

    </StackPanel>
</Window>
